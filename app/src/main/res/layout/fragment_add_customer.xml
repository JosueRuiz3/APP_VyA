<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center"
    android:background="#F7F7F7"
    tools:context=".AddCustomerFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp">

        <!-- Centro de la pantalla -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <!-- Tipo de venta Titulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:text="AÃ±adir cliente"
                android:textAppearance="@style/Tittles"/>

            <!-- Cliente Campos de texto-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="75dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="#705C61"
                    app:hintTextColor="#E6000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nombre_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:hint="Nombre cliente"
                        android:textColorHint="#65000000"
                        android:textAppearance="@style/campos_de_texto"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <!-- Producto Campos de texto-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="150dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="#705C61"
                    app:hintTextColor="#E6000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nombre_producto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:hint="Producto"
                        android:textColorHint="#65000000"
                        android:textAppearance="@style/campos_de_texto"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>


            <!-- Descripcion Campos de texto-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="225dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="#705C61"
                    app:hintTextColor="#E6000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:hint="Descripcion"
                        android:textColorHint="#65000000"
                        android:textAppearance="@style/campos_de_texto"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <!-- Lado izquierdo de la pantalla -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">
                <RelativeLayout
                    android:layout_width="1.05in"
                    android:layout_height="match_parent">

                    <!-- Cantidad Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="300dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cantidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone|textCapSentences"
                                android:hint="Cantidad"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>


                    <!-- Total Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="375dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Total"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>


                    <!-- Logo de calendario pago1-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarpago1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="450dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">
                    </RelativeLayout>
                    <!-- Fecha del pago 1 del producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="450dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_pago1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer pago"
                                android:autoSizeMinTextSize="15dp"
                                android:inputType="date"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"
                                tools:ignore="DuplicateClickableBoundsCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            
            <!-- Lado derecho de la pantalla -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <RelativeLayout
                    android:layout_width="1.05in"
                    android:layout_height="match_parent">

                    <!-- Precio de Unitario Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="300dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/precio_unitario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Precio unitario"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>



                    <!-- Logo de calendario fecha pago 2 del producto-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarpago2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="450dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <!-- fecha pago 2 del producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="450dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_pago2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo pago"
                                android:textColorHint="#65000000"
                                android:inputType="date"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>


                    <!-- Logo de calendario entrega producto-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarCalendario"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="375dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck"/>
                    <!-- Fecha en que se entrego el producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="375dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_entrega"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha entrega"
                                android:inputType="date"
                                android:textAppearance="@style/campos_de_texto"
                                android:textColorHint="#65000000" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="408dp"
                android:layout_marginLeft="150dp">
                <!-- muestra la opcion de cargando-->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>

            <!-- Boton agregar cliente-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnagregar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="550dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E1E1E1"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:text="Guardar"
                    android:textAppearance="@style/Tittles" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>