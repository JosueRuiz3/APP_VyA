<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal|center"
    tools:context=".AddCustomerFragment"
    android:background="#F7F7F7">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal|center">

                    <!-- Linea en el centro-->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#00FFFFFF"
                        app:layout_constraintGuide_percent="0.5" />

                    <!-- Tipo de cliente Titulo -->
                    <RelativeLayout
                        android:id="@+id/ventaTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginTop="25dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="AÃ±adir cliente"                            android:textAppearance="@style/Tittles"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <!-- Cliente Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="75dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nombre_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences"
                                android:hint="Nombre cliente"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="150dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nombre_producto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences"
                                android:hint="Producto"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>

                    <!-- Descripcion Campos de texto-->
                    <RelativeLayout
                        android:id="@+id/DescripcionCampos"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="225dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/descripcion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences"
                                android:hint="Descripcion"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- muestra la opcion de cargando-->
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/DescripcionCampos"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <!-- Cantidad Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="300dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        android:layout_marginEnd="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cantidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone|textCapSentences"
                                android:hint="Cantidad"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Precio de Unitario Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="300dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/precio_unitario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Precio unitario"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Abonos Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="375dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        android:layout_marginEnd="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/abonos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Abonos"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Debe Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="375dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/debe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Debe"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Total Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="450dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        android:layout_marginEnd="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Total"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Logo de calendario entrega producto-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarCalendario"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="450dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <!-- Fecha en que se entrego el producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="450dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_entrega"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha entrega"
                                android:inputType="date"
                                android:textAppearance="@style/campos_de_texto"
                                android:textColorHint="#65000000" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Logo de calendario pago 1-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarpago1"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="525dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        android:layout_marginEnd="6dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">
                    </RelativeLayout>

                    <!-- Fecha del pago 1 del producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="525dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        android:layout_marginEnd="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_pago1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer pago"
                                android:autoSizeMinTextSize="15dp"
                                android:inputType="date"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"
                                tools:ignore="DuplicateClickableBoundsCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Logo de calendario fecha pago 2 del producto-->
                    <RelativeLayout
                        android:id="@+id/btnmostrarpago2"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="525dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:elevation="25dp"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <!-- fecha pago 2 del producto Campos de texto-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="525dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="6dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha_pago2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo pago"
                                android:textColorHint="#65000000"
                                android:inputType="date"
                                android:textAppearance="@style/campos_de_texto"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20mm"
                    android:layout_marginTop="580dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout
                    android:id="@+id/btnagregar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/colorbtn"
                    app:cardElevation="2dp"
                    tools:ignore="TouchTargetSizeCheck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:text="Guardar"
                    android:textAppearance="@style/Tittles" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>