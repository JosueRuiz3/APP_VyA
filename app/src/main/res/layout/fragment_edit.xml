<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center"
    android:background="#F7F7F7"
    tools:context=".EditFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp">

        <!-- Centro de la pantalla -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:text="Detalles de la venta"
                android:textAppearance="@style/Tittles" />

            <!-- Producto Campos de texto-->
            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="75dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="#705C61"
                    app:hintTextColor="#E6000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nombre_producto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Producto"
                        android:textColorHint="#65000000"
                        android:textAppearance="@style/campos_de_texto"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <!-- Lado izquierdo de la pantalla -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">
                <RelativeLayout
                    android:layout_width="1.05in"
                    android:layout_height="match_parent">

                    <!-- Stock Campos de texto-->
                    <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="150dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/stock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Stock"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"
                                android:inputType="phone"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Precio de compra Campos de texto-->
                    <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="225dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/precio_compra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Precio compra"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

            <!-- Lado derecho de la pantalla -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <RelativeLayout
                    android:layout_width="1.05in"
                    android:layout_height="match_parent">

                    <!-- Talla Campos de texto-->
                    <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="150dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/talla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Talla(s)"
                                android:textColorHint="#65000000"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Precio de venta Campos de texto-->
                    <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="225dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#705C61"
                            app:hintTextColor="#E6000000">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/precio_venta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Precio venta"
                                android:textColorHint="#65000000"
                                android:inputType="numberDecimal"
                                android:textAppearance="@style/campos_de_texto"
                                android:focusable="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!-- Boton eliminar producto-->
                    <RelativeLayout
                        android:id="@+id/btneliminar"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="120dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="@style/Tittles"
                            app:srcCompat="@drawable/delete" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <!-- Boton agregar producto-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btneditar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="350dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#E1E1E1"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:text="Editar"
                    android:textAppearance="@style/Tittles" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>